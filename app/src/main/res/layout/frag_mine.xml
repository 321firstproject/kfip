<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/include_mine_person_info"/>
    <include layout="@layout/include_mine_wealth"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_view_divider_height"
        android:background="@color/standard_bg_view_divider"
        android:layout_marginTop="@dimen/mine_ip_record_marginTop"
        />
    <include
        android:id="@+id/widget_ip_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_widget_title_value_mine"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_view_divider_height"
        android:background="@color/standard_bg_view_divider"
        android:layout_marginLeft="@dimen/mine_view_horizontal_margin"
        android:layout_marginRight="@dimen/mine_view_horizontal_margin"
        />
    <include
        android:id="@+id/widget_prize_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_widget_title_value_mine"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_view_divider_height"
        android:background="@color/standard_bg_view_divider"
        android:layout_marginLeft="@dimen/mine_view_horizontal_margin"
        android:layout_marginRight="@dimen/mine_view_horizontal_margin"
        />
    <include
        android:id="@+id/widget_announce_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_widget_title_value_mine"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_view_divider_height"
        android:background="@color/standard_bg_view_divider"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_view_divider_height"
        android:background="@color/standard_bg_view_divider"
        android:layout_marginTop="@dimen/mine_ip_record_marginTop"
        />
    <include
        android:id="@+id/widget_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_widget_title_value_mine"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_view_divider_height"
        android:background="@color/standard_bg_view_divider"
        />
</LinearLayout>