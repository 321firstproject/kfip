<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_sheet_height_cancel"
        android:gravity="center"
        android:textSize="@dimen/standard_list_text_1"
        android:layout_marginTop="@dimen/action_sheet_cancel_padding"
        android:layout_marginBottom="@dimen/action_sheet_cancel_padding"
        android:textColor="@color/action_sheet_text_color"
        android:text="@string/common_cancel"
        android:background="@drawable/shape_item_action_sheet"
        />
</LinearLayout>